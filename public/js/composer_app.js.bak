    updateGameField: function (field, value) {
        if (!this.activeGameId) return;
        const game = this.data.games.find(g => g.id === this.activeGameId);
        if (!game) return;
        if (field === 'id') { game.id = value; this.activeGameId = value; }
        else if (field === 'match_label') { game.match_label = value; }
        else if (field === 'tags') {
            const tagsArray = value.split(/[ ,]+/).map(t => t.trim()).filter(t => t.length > 0);
            if (!game.meta) game.meta = {};
            // Update all locations for compatibility
            game.meta.tags = tagsArray;
            if (game.content) game.content.tags = tagsArray;
            game.tags = tagsArray; // Update root tags for legacy persistence
            // Immediate feedback in library list if we are in Librarian Mode
            if (this.isEditingTemplate) {
                // Update local catalog entry temporarily for immediate feedback
                if (this.libraryCatalog && this.libraryCatalog.games) {
                    const entry = this.libraryCatalog.games.find(g => g.path === this.activeTemplatePath);
                    if (entry) {
                        entry.tags = tagsArray;
                        this.renderLibrary(this.libraryCatalog);
                    }
                }
            }
        }
        else { game.content[field] = value; }
        if (field === 'title' || field === 'id') this.renderGameLists();
    },

