    addVariant: function (gameId) {
        const game = this.data.games.find(g => g.id === gameId);
        if (!game) return;
        if (!game.variants) game.variants = [];

        // Deep clone current game scoring as starting point
        const initialScoring = JSON.parse(JSON.stringify(game.scoring.components || []));

        const newVariant = {
            id: 'v_' + Math.random().toString(36).substr(2, 9),
            label: 'New Variant',
            description: '',
            scoring_override: initialScoring
        };

        game.variants.push(newVariant);
        this.renderVariantsList(game);
        this.editVariant(gameId, newVariant.id);
    },

    deleteVariant: function (gameId, variantId) {
        if (!confirm("Delete this variant?")) return;
        const game = this.data.games.find(g => g.id === gameId);
        if (!game) return;
        game.variants = game.variants.filter(v => v.id !== variantId);
        this.renderVariantsList(game);
    },

