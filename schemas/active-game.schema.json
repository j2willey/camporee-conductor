{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://localhost:3000/schemas/active-game.json",
  "title": "Active Game (Cartridge)",
  "description": "Defines a specific game instance within a Camporee Cartridge.",
  "type": "object",
  "required": [
    "library_uuid",
    "library_title",
    "type",
    "content",
    "scoring_model"
  ],
  "properties": {
    "library_uuid": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the original Library Generic Game"
    },
    "library_title": {
      "type": "string",
      "description": "The original generic title of the game"
    },
    "type": {
      "type": "string",
      "enum": [
        "patrol",
        "troop",
        "exhibition"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "content": {
      "$ref": "definitions/content.json"
    },
    "scoring_model": {
      "$ref": "definitions/scoring.json"
    }
  }
}