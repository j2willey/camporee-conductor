{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://localhost:3000/schemas/camporee-instance.json",
  "title": "Camporee Event Configuration (Manifest)",
  "type": "object",
  "required": [
    "schemaVersion",
    "meta",
    "playlist"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "meta": {
      "type": "object",
      "required": [
        "camporeeId",
        "title",
        "year",
        "theme"
      ],
      "properties": {
        "camporeeId": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string"
        },
        "theme": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        },
        "director": {
          "type": "string"
        },
        "district": {
          "type": "string"
        }
      }
    },
    "playlist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "gameId",
          "enabled",
          "order"
        ],
        "properties": {
          "gameId": {
            "type": "string",
            "description": "Must match a filename in the games/ folder (minus extension)"
          },
          "enabled": {
            "type": "boolean"
          },
          "order": {
            "type": "integer"
          }
        }
      }
    }
  }
}