<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/conductor.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-campground"></i> Camporee Composer
            </a>

            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light btn-sm me-2" onclick="composer.newCamporee()">
                    <i class="fas fa-file"></i> New
                </button>
                <label class="btn btn-outline-warning btn-sm me-2 mb-0">
                    <i class="fas fa-folder-open"></i> Import Zip
                    <input type="file" id="fileInput" accept=".zip" hidden>
                </label>
                <button class="btn btn-success btn-sm" onclick="composer.exportCamporee()">
                    <i class="fas fa-save"></i> Export Zip
                </button>
            </div>
        </div>
    </nav>

    <div id="composer-layout">
        <aside id="library-sidebar">
            <div class="sidebar-header p-3 border-bottom">
                <h5 class="mb-0"><i class="fas fa-book"></i> Game Library</h5>
            </div>
            <ul id="library-list" class="list-unstyled p-0 mb-0"></ul>
            <div id="library-status" class="p-3 text-muted small text-center">Loading Library...</div>
        </aside>

        <main id="composer-main-pane">
            <div class="container-fluid py-3">
                <ul class="nav nav-tabs" id="composerTabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="meta-tab" data-bs-toggle="tab" data-bs-target="#meta-pane"
                            type="button">1. Camporee Info</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="patrol-tab" data-bs-toggle="tab" data-bs-target="#patrol-pane"
                            type="button">2. Patrol Games</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="troop-tab" data-bs-toggle="tab" data-bs-target="#troop-pane"
                            type="button">3. Troop Events</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="presets-tab" data-bs-toggle="tab" data-bs-target="#presets-pane"
                            type="button">4. Presets</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="editor-tab" data-bs-toggle="tab" data-bs-target="#editor-pane"
                            type="button" disabled>Game Editor</button>
                    </li>
                </ul>

                <div class="tab-content p-3 border border-top-0 bg-white shadow-sm">

                    <div class="tab-pane fade show active" id="meta-pane">
                        <h4>Event Details</h4>
                        <p class="text-muted">Define the global settings for this specific event.</p>
                        <form id="metaForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Camporee Title</label>
                                    <input type="text" class="form-control" id="metaTitle"
                                        placeholder="e.g. [District] Camporee 2026">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Theme</label>
                                    <input type="text" class="form-control" id="metaTheme"
                                        placeholder="e.g. Space Odyssey">
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="patrol-pane">
                        <div id="patrolList" class="list-group p-3"></div>
                        <div class="p-3">
                            <button class="btn btn-primary w-100" onclick="composer.addGame('patrol')">
                                <i class="fas fa-plus-circle"></i> Add Patrol Game
                            </button>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="troop-pane">
                        <div id="troopList" class="list-group p-3"></div>
                        <div class="p-3">
                            <button class="btn btn-success w-100" onclick="composer.addGame('troop')">
                                <i class="fas fa-calendar-plus"></i> Add Troop Event
                            </button>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="presets-pane">
                        <div id="presets-container" class="p-3"></div>
                    </div>

                    <div class="tab-pane fade" id="editor-pane">
                        <div id="editor-container">
                            <p class="text-muted">Select a game from the list to edit it.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="previewModalTitle">Game Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="previewModalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>

    <script type="module" src="/js/apps/composer.js"></script>
</body>

</html>